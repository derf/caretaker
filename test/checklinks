## vim:ft=zsh

cat > links <<- quux
	foo ignored
	# ignored
	hard foo bar
	soft link file
	soft blub \$quux
quux

alias checklinks='checklinks --parameter quux=flurbl'

echo barbl > bar
echo flurbl > file
echo morp > flurbl

echo "# checklinks"
checklinks
[[ $(cat foo) == $(cat bar) ]]
[[ $(cat link) == $(cat file) ]]
[[ $(cat blub) == $(cat flurbl) ]]

echo "# checklinks --remove"
checklinks --remove
[[ -e bar ]]
[[ ! -e link ]]
[[ -e file ]]
[[ ! -e blub ]]
[[ -e flurbl ]]
