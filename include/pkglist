#!/usr/bin/env zsh
## on the PKG_HOST: list available packages
## used by pkg remote-update

# change into package root directory (first argument)
cd $1

for i in *(-/); {
	if [[ -d $i/.git ]] {
		echo -n "$i git "
		echo ${$(git --git-dir=$i/.git log -n 1)[2]}
	} else {
		echo "$i: Unsupported or no repository" >&2
	}
}
